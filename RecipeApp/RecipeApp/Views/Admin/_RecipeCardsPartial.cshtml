@model IEnumerable<RecipeApp.Models.Recipe>

@foreach (var recipe in Model)
{
    <div class="col-md-4 mb-4 text-center">
        <div class="card h-100">
            <a href="/recipes/@recipe.Slug">
                <img src="@recipe.ImageUrl" class="card-img-top border" style="height: 200px; object-fit: cover;" alt="@recipe.Name" />
            </a>
            <div class="card-body">
                <h5 class="card-title">@recipe.Name</h5>
                <p class="card-text">
                    <small class="text-muted">By @recipe.Author?.Email</small><br />
                    <small class="text-muted">@recipe.DateAdded.ToShortDateString()</small>
                </p>
            </div>
            <div class="card-footer">
                <a asp-controller="Admin" asp-action="Edit" asp-route-id="@recipe.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                <a asp-controller="Admin" asp-action="Delete" asp-route-id="@recipe.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                <a asp-controller="Admin" asp-action="Details" asp-route-slug="@recipe.Slug" class="btn btn-sm btn-outline-secondary">Details</a>
            </div>
        </div>
    </div>
}

